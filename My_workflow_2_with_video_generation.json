        "main": [
          [
            {
              "node": "Log to Google Sheets",
              "type": "main",
              "index": 0
            }
          ]
        ]
      },
      "Log to Google Sheets": {
        "main": [
          [
            {
              "node": "Wait - Rate Limiting",
              "type": "main",
              "index": 0
            }
          ]
        ]
      },
      "Wait - Rate Limiting": {
        "main": [
          [
            {
              "node": "Instagram - Create Video Media",
              "type": "main",
              "index": 0
            },
            {
              "node": "Facebook - Upload Video",
              "type": "main",
